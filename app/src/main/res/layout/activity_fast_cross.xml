            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fast Cross Jodi"
            android:textSize="22dp"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

